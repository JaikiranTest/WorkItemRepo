@model WorkItem.Task.Models.Task

@{
    ViewData["Title"] = "Edit";
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<h1 style="color:red;">Edit Task Item</h1>
<i class="fa fa-reply" aria-hidden="true"></i>
<a asp-action="Index" class="NameStyle">Back to Work Items</a>

<hr />
<div class="row">
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-12">
                <i class="fa fa-plus" aria-hidden="true"></i>
                <label asp-for="Title" class="control-label"> NEW TASK *</label>
                <input asp-for="Title" class="form-control" placeholder="Enter title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assigned"></label>
                <select id="ddlEmails" asp-for="Assigned" asp-items="@ViewBag.Emails">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="Assigned" class="text-danger"></span>
                <label asp-for="StatusId"></label>
                <select asp-for="StatusId" asp-items="@ViewBag.StatusId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Discription" class="control-label"></label>
                @Html.EditorFor(m => m.Discription, additionalViewData: new { htmlAttributes = new { @class = "form-control" }})
                <span asp-validation-for="Discription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                @Html.EditorFor(m => m.Comments, additionalViewData: new { htmlAttributes = new { @class = "form-control" }})
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <p>
            <div class="form-group" align="right">
                    <i class="fa fa-save fa-2x" aria-hidden="true">
                        <input type="submit" value="Save" class="btn btn-primary"/>
                    </i>
            </div>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
