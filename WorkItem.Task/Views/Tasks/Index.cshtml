@model IEnumerable<WorkItem.Task.Models.Task>

@{
    ViewData["Title"] = "Index";
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<p>
    <h1 style="color:red;">Work items</h1>
<p>
</p>
<p>
    <i class="fa fa-plus" aria-hidden="true"></i>
    <a asp-action="Create" class="NameStyle"> Add New Task</a>
</p>
    <table class="table">
        <thead>
            <tr>
                <th>
                        @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.Assigned)
                </th>
                <th>
                        @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                        @Html.DisplayName("Action")
                </th>
                <th></th>
            </tr>
        </thead>

            @foreach (var item in Model)
            {
            <tbody>
                <tr>
                    <td>
                            @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        <i class="fa fa-check-square" aria-hidden="true"></i>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="NameStyle">@item.Title</a>
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.Assigned)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.Status.Status)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-danger delete" data-id="@item.Id" data-controller="Tasks" data-action="Delete" data-body-message="Are you sure ? You want to delete this item id : @item.Id">Delete</a>
                    </td>
                </tr>

            </tbody>
            }

    </table>
